{
  "extends": "./.nuxt/tsconfig.json",
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./*"],
      "@/*": ["*"],
    },
    "types": [
      "@types/node",
      "@pinia/nuxt",
    ],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
