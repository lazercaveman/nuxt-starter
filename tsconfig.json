{
  "extends": "./.nuxt/tsconfig.json",
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "nuxt.config.ts",
    "server/**/*.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.vue",
    "server/**/*.ts",
    "types/**/*.d.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "es2022",
    "moduleResolution": "Bundler",
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "types": [
      "@types/node",
      "@pinia/nuxt",
      "nuxt"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "~/*": [
        "./server/*"
      ],
    },
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
